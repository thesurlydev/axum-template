# Database connection string
DATABASE_URL={{db_url}}

# Database connection pool settings
# Maximum number of connections in the pool. Adjust based on your database server capacity
# and expected concurrent load. A good starting point is (2 * CPU cores) + number of disks.
# Default: 5
DATABASE_MAX_CONNECTIONS=5

# Minimum number of idle connections to maintain in the pool.
# Setting this too high wastes resources; too low may cause latency spikes.
# Default: 1
DATABASE_MIN_CONNECTIONS=1

# Server binding configuration
SERVICE_HOST=0.0.0.0
SERVICE_PORT={{port}}

# JWT secret key for token signing (generate a secure random value for production)
JWT_SECRET_KEY=e2e-test-secret-key-change-in-production

# CORS allowed origins (comma-separated list of origins or "*" for any origin)
# Examples:
#   Production (single origin):     CORS_ALLOWED_ORIGINS=https://myapp.com
#   Production (multiple origins):  CORS_ALLOWED_ORIGINS=https://myapp.com,https://admin.myapp.com
#   Development (any origin):       CORS_ALLOWED_ORIGINS=*
# Security note: Using "*" allows any origin and should only be used in development.
# For production, always specify explicit allowed origins.
CORS_ALLOWED_ORIGINS=*

# Request timeout in seconds. Requests exceeding this duration will be terminated.
# Default: 5
REQUEST_TIMEOUT_SECS=5
